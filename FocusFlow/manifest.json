{
  "manifest_version": 3,
  "name": "FocusFlow",
  "version": "1.0.0",
  "description": "Stay focused and productive. Block distracting websites, use Pomodoro timer, track your focus time.",

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "FocusFlow - Stay Focused"
  },

  "background": {
    "service_worker": "background/background.js"
  },

  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "notifications"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "options_page": "options/options.html",

  "web_accessible_resources": [
    {
      "resources": ["content/blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
