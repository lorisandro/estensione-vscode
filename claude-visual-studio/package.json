{
  "name": "claude-visual-studio",
  "displayName": "Claude Visual Studio",
  "description": "Dev server and MCP integration for Claude Code AI",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "claude",
    "ai",
    "dev server"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension/index.js",
  "contributes": {
    "commands": [
      {
        "command": "claudeVisualStudio.openSettings",
        "title": "Settings",
        "category": "Claude Visual Studio",
        "icon": "$(gear)"
      },
      {
        "command": "claudeVisualStudio.reloadExtension",
        "title": "Reload Extension",
        "category": "Claude Visual Studio",
        "icon": "$(sync)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "claudeVisualStudio.openSettings"
        },
        {
          "command": "claudeVisualStudio.reloadExtension"
        }
      ]
    },
    "configuration": {
      "title": "Claude Visual Studio",
      "properties": {
        "claudeVisualStudio.serverPort": {
          "type": "number",
          "default": 3333,
          "description": "Port for the local preview server"
        },
        "claudeVisualStudio.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Auto-refresh preview on file save"
        },
        "claudeVisualStudio.chromeDebugPort": {
          "type": "number",
          "default": 9222,
          "description": "Port for Chrome remote debugging (MCP external browser)"
        },
        "claudeVisualStudio.chromePath": {
          "type": "string",
          "default": "",
          "description": "Custom path to Chrome executable. Leave empty to use default."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:mcp && npm run build:mcp-browser && npm run build:injected",
    "build:extension": "esbuild src/extension/index.ts --bundle --outfile=dist/extension/index.js --external:vscode --format=cjs --platform=node",
    "build:mcp": "esbuild src/mcp-server/index.ts --bundle --outfile=dist/mcp-server/index.js --format=esm --platform=node --packages=external",
    "build:mcp-browser": "esbuild src/mcp-browser-server/index.ts --bundle --outfile=dist/mcp-browser-server/index.js --format=esm --platform=node --packages=external",
    "build:injected": "esbuild src/injected-scripts/element-inspector.ts --bundle --outfile=dist/injected-scripts/element-inspector.js --format=iife --platform=browser",
    "watch": "npm run watch:extension",
    "watch:extension": "esbuild src/extension/index.ts --bundle --outfile=dist/extension/index.js --external:vscode --format=cjs --platform=node --watch",
    "dev:server": "npm run build:extension && node dist/extension/server/test-server.js",
    "test:server": "npm run build:extension && node dist/extension/server/test-server.js .",
    "mcp:start": "node dist/mcp-server/index.js",
    "mcp:browser": "node dist/mcp-browser-server/index.js",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc -p tsconfig.extension.json --noEmit"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.10",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@babel/generator": "^7.23.6",
    "@babel/parser": "^7.23.6",
    "@babel/traverse": "^7.23.6",
    "@babel/types": "^7.23.6",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "chokidar": "^3.5.3",
    "express": "^4.18.2",
    "puppeteer-core": "^24.34.0",
    "ws": "^8.16.0"
  }
}
